<!DOCTYPE html>
<html lang="pt-br">
<%- include('../components/head', {title: "Cadastre-se" }); %>

<body>
  <% if(typeof messages !=="undefined") { %>  
    <%-include('../components/flashMessage', { messages }); %>  
  <% } %>

  <main class="content">
    <form action="" method="post" class="form">
      <div class="form-group form-group--row">
        <label class="label">
          Nome do propriet√°rio
          <input type="text" name="nameOwner" class="input-row" <% if (typeof inputData !=="undefined" ) { %> 
            value="<%= inputData.nameOwner %>" <% } %> />
        </label>

        <label class="label">
          Nome da loja
          <input type="text" name="nameCompany" class="input-row" <% if (typeof inputData !=="undefined" ) { %> 
            value="<%= inputData.nameCompany %>" <% } %> />
        </label>

        <label class="label">
          Nome que vai aparecer na url (link personalizado)
          <input type="text" name="subdomain" class="input-row" <% if (typeof inputData !=="undefined" ) { %> 
            value="<%= inputData.subdomain %>" <% } %> />
        </label>

        <label class="label">
          Email
          <input type="email" name="email" class="input-row" <% if (typeof inputData !=="undefined" ) { %> 
            value="<%= inputData.email %>" <% } %> />
        </label>

        <label class="label">
          Senha
          <input type="password" name="password" class="input-row" autocomplete="on" />
        </label>

        <label class="label">
          Repetir senha
          <input type="password" name="" class="input-row" autocomplete="on" />
        </label>
      </div>

      <br><br>

      <div class="content_button">
        <button class="button">Cadastrar</button>
      </div>
    </form>
  </main>
  <script src="../public/script/script.js"></script>
</body>

</html>