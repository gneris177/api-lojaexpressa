<style>
  main {
    width: 100%;
  }

  .header-main {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    z-index: 1;
    padding: 0.4rem;
    display: flex;
    align-items: center;
    gap: 0.4rem;
    justify-content: space-between;
    align-items: center;
    background: var(--primary-color);
    color: var(--text-color);
  }

  .change-theme {
    position: absolute;
    right: 1rem;
    cursor: pointer;
  }

  @media (min-width: 992px) {
    .header-main {
      position: fixed;
      flex-direction: row;
      justify-content: space-between;
      height: 60px;
    }

    .change-theme {
      position: initial;
    }
  }

  .content-logo {
    color: var(--text-color);
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .logo {
    width: 32px;
    height: 32px;
    border-radius: 50%;
  }

  h4 {
    margin: 0;
    font-size: 1.2rem;
    text-transform: uppercase;
  }
</style>

<body>
  <div id="root" class="root-content">
    <header class="header-main">
      <span data-toggle="menu-mobile" class="button-menu">
        <span></span>
        <span></span>
        <span></span>
      </span>

      <h4 class="text">Loja expressa</h4>

      <div class="content-logo">
        <img class="logo" src="/../image/logo-lojaexpressa.jpeg" alt="">
      </div>
    </header>

    <%- include('./components/menu'); %>

      <div class="body-content">
        <%- body %>
      </div>
  </div>
</body>

