<div class="menu-curtain"></div>


<script>
  const buttonToggleMenu = document.querySelector('[data-toggle=menu');

  const toogleMenu = () => {
    document.querySelector('#root').classList.toggle('toggle-lg');
    document.querySelector('#button-toggle-menu').classList.toggle('fa-circle-chevron-left');
    document.querySelector('#button-toggle-menu').classList.toggle('fa-circle-chevron-right');
  }


  const toogleMenuMobile = () => {
    document.querySelector('#root').classList.toggle('toggle-md');
  }

  document.onclick = (e) => {
    const el = e.target;
    if (el.dataset.toggle === 'menu') toogleMenu();
    if (el.dataset.toggle === 'menu-mobile') toogleMenuMobile();
  }
</script>