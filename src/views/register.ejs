                <label class="label" for="bairro">Bairro</label>
                <input class="input-row" type="text" name="bairro" id="bairro" required="" />
            </div>

            <div class="inputBox">
                <label class="label" for="cep"> Cep</label>
                <input class="input-row" type="text" name="cep" id="cep" required="" />
            </div>

            <div class="inputBox">
                <label class="label" for="numero">Numero</label>
                <input class="input-row" type="number" name="numero" id="numero" required="" />
            </div>
            <div class="content_button">
