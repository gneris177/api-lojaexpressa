                <label class="label" for="email">Email</label>
                <input class="input-row" type="email" name="email" id="email" required="" />
            </div>

            <div class="inputBox">
                <label class="label" for="Pass">Password</label>
                <input class="input-row" type="password" name="Pass" id="Pass" required="" />
            </div>

            <div class="inputBox">
                <label class="label" for="tel">Whatsapp</label>
                <input class="input-row" type="tel" name="tel" id="tel" required="" />
            </div>

            <div class="inputBox">
                <label class="label" for="logo">Logo</label>
                <input class="input-row" type="text" name="logo" id="logo" />
            </div>

            <div class="inputBox">
                <label class="label" for="endereco">Endere√ßo</label>
